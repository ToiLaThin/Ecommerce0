@page
@model Ecommerce0.Pages.Auth.LogoutModel
@{
}

<form method="post">
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-4 shadow rounded p-5">
                <h4>Are you sure you will log out ?</h4>
                <p>
                    <button class="btn btn-outline-primary" asp-page-handler="LogOut">Yes</button>
                    <button class="btn btn-outline-success ml-5" asp-page-handler="NoLogOut">No</button>
                </p>
            </div>
        </div>
    </div>
</form>
