        .myModalContent {
            width: 80%;
            margin: 5% auto;
            background-color: #fefefe;
            box-shadow: 1px 1px 20px 2px rgba(0,0,0,0.2);
            border-radius: 5px;
            animation-name: moveFade;
            animation-duration: 2.4s;
        }

        #myModalCloseBtn {
            float: right;
            font: bold 40px sans-serif;
            color: gray;
            cursor: pointer;
        }

        .myModalHeader::after {
            display: table;
            content: "";
            clear: both;
        }

        .myModalHeader {
            padding: 15px;
        }

        #myModalCloseBtn:hover, #myModalCloseBtn:focus {
            color: black;
        }

        .myModalBody {
            padding: 40px;
            background-color: white;
        }

        #myGoogleMap {
            height: 300px;
            width: 100%;
        }

        @@keyframes moveFade {
            from {
                top: 500px;
                opacity: 0;
            }

            to {
                top: 0;
                opacity: 1;
            }
        }
    </style>
