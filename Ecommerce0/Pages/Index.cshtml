@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2>List of books:</h2>
    </div>
    <div class="col-3">
        <a asp-page="me/create" class="btn btn-info btn-sm form-control bg-success text-white">Create</a>
    </div>
</div>

<div class="col-12 border p-3 m-3">
    <form  method="post">
        @if(Model.Books.Count() > 0)
        {
            <table class="table border">
                <tr class="table-secondary">
                    <th>
                        <label asp-for="Books.FirstOrDefault().Id"></label>
                    </th>

                    <th>
                        <label asp-for="Books.FirstOrDefault().Title"></label>
                    </th>

                    <th>
                        <label asp-for="Books.FirstOrDefault().Price"></label>
                    </th>

                    <th>
                        <label asp-for="Books.FirstOrDefault().Category.Name">Category Name</label>
                    </th>
                </tr>

                @foreach(var book in Model.Books)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(b => book.Id)
                    </td>

                    <td>
                        @Html.DisplayFor(b => book.Title)
                    </td>

                    <td>
                        @Html.DisplayFor(b => book.Price)
                    </td>

                    <td>
                        @Html.DisplayFor(b => book.Category.Name)
                    </td>
                </tr>
                }
            </table>
        }
    </form>

</div>