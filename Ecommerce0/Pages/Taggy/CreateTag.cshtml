@page
@model Ecommerce0.Pages.Taggy.CreateTagModel
@{
}

<h2>Create a new Tag:</h2>
<div class="container-fluid row border p-2 mb-5">
    <form method="post">
        <div class="form-group row p-2">
            <div class="col-4">
                <label asp-for="@Model.Tag.TagName" class=""></label>
            </div>
            <div class="col-8">
                <input asp-for="@Model.Tag.TagName" class="form-control" />
            </div>
        </div>
        <br />

        <div class="form-group row p-2">
            <div class="col-4">
                <label>Category Name:</label>
            </div>
            <div class="col-8">
                <select name="CatId">
                    @foreach (var o in Model.Options)
                    {
                        <option value="@Convert.ToInt32(o.Value)">@o.Text</option>
                    }
                </select>
            </div>
        </div>
        <br>

        <div class="container-fluid mb-4">

            <button type="submit" class="btn btn-sm btn-outline-primary float-end">Submit</button>
            <a href="/me" class="btn btn-sm btn-outline-secondary float-end ">Back</a>
        </div>
    </form>
</div>